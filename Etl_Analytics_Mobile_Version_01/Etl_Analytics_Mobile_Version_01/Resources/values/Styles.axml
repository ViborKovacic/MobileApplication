<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="dialog_animation">
    <item name="android:windowEnterAnimation">@anim/SlideUpAnimation</item>
    <item name="android:windowExitAnimation">@anim/SlideRightAnimation</item>
