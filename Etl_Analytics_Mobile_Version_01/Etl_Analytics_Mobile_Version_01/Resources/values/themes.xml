<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- the theme applied to the application or activity -->
  <style name="CustomActionBarTheme"
         parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
  </style>

  <!-- ActionBar styles -->
  <style name="MyActionBar"
         parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">#003D58</item>
  </style>

  <style name="CustomActionBarTheme1"
       parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar1</item>
  </style>

  <style name="MyActionBar1" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:height">75dp</item>
    <item name="android:displayOptions"></item>
    <item name="android:background">#00344C</item>
  </style>

  <style name="CustomActionBarTheme3"
         parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar2</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <!-- ActionBar styles -->
  <style name="MyActionBar2"
         parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">#00344C</item>
    <item name="android:icon">@android:color/transparent</item>
  </style>
</resources>